pipeline {
    agent any 
    environemnts {
        PATH = "/opt/apache-maven-3.6.3/bin:$PATH"
    }
    stages {
        stage('SCM Checkout') {
            steps {
                echo 'Chekcing out source code'
            }
        }
        stage ('compile and package') {
            steps {
                // def mvnhome = tool name: 'maven-1',type:'maven'
                sh "${mvnhome}/bin/mvn clean package"
            }
        }
    }
}
